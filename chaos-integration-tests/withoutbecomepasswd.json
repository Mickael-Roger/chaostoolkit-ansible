{
    "version": "1.0.0",
    "title": "Test only",
    "description": "Test only",
    "tags": ["test"],
    "configuration": {
        "ansible_module_path": "/var/lib/ansible/share",
        "ansible_become_user": "root",
        "ansible_ssh_private_key": "/home/chaos/.ssh/id_rsa",
        "ansible_user": "chaos"
    },
    "steady-state-hypothesis": {
        "title": "Tests",
        "probes": [
            {
                "type": "probe",
                "name": "test-gather-fact",
                "tolerance": {
                  "type": "jsonpath",
                  "path": "$.localhost.task",
                  "expect": "chaos"
                },
                "provider": {
                    "type": "python",
                    "module": "chaosansible.probes",
                    "func": "chaosansible_probe",
                    "arguments": {
                        "host_list": ["localhost", "host1"],
                        "num_target": "all",
                        "facts": "yes",
                        "become": false,
                        "ansible": {
                            "module": "shell",
                            "args": "users"
                        }
                    }
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "test-create-file",
            "provider": {
                "type": "python",
                "module": "chaosansible.actions",
                "func": "chaosansible_run",
                "arguments": {
                    "host_list": ["host1"],
                    "num_target": "all",
                    "facts": "yes",
                    "become": true,
                    "ansible": {
                        "module": "file",
                        "args": {
                            "path": "/tmp/test1234",
                            "state": "touch"
                        }
                    }
                }
            }
        },
        {
            "type": "probe",
            "name": "verify-file-created",
            "provider": {
                "type": "python",
                "module": "chaosansible.actions",
                "func": "chaosansible_run",
                "arguments": {
                    "host_list": ["host1"],
                    "num_target": "all",
                    "facts": "yes",
                    "become": true,
                    "ansible": {
                        "module": "shell",
                        "args": "ls -la /tmp/test1234"
                    }
                }
            }
        }
    ]
}
